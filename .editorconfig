# editor config: https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js, json}]
indent_size = 2

[*.sh, Makefile]
indent_style = tab

[*.{bat, cmd, ps1}]
end_of_line = crlf

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
